<!DOCTYPE html>
<html>
  <head>
    <title>YTeam</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-info">
        <div class="container">
            <div class="navbar-translate">
                <a class="navbar-brand" href="/welcome.html">GNV Explorer</a>
                <!-- <%=link_to image_tag("GNV-Xplorer.png") , root_path, { :class=>"navbar-brand"} %> -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="sr-only">Toggle navigation</span>
                <span class="navbar-toggler-icon"></span>
                <span class="navbar-toggler-icon"></span>
                <span class="navbar-toggler-icon"></span>
                </button>
            </div>


            <div class="collapse navbar-collapse">
              <ul class="navbar-nav">
                <li class="nav-item">
                <%=link_to "Places", places_path, { :class=>"nav-link"} %>
              <% if current_user %>
                <li> <%= current_user.uname %></li>

                      <!-- <a href="#places" class="nav-link">link</a> -->
                    </li>
                    <li class="nav-item">
                      <a href="#events" class="nav-link">link</a>
                    </li>
                    <li class="nav-item">
                      <%=link_to "Logout", session_path(current_user.id), method: :delete,  class: "nav-link"  %>
                    </li>
                  <% else %>
                    <li class="nav-item">
                      <%=link_to "Login/Signup", sessions_path, { :class=>"nav-link"} %>
                    </li>
                  <% end %>
                </ul>
                <form class="form-inline ml-auto">
                <div class="form-group no-border">
                  <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-white btn-just-icon btn-round">
                   <i class="material-icons">search</i>
                </button>
              </form>
            </div>
        </div>
    </nav>

  <% flash.each do |type, message| %>
			<div class="alert alert-<%= type %>"><%= message %></div>
		<% end %>

    <%= yield %>
  </body>
</html>
