            <% @places_convenience.each do |place| %>
              <li><%= place %></li>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-3 mt-3">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title text-center" Style="font-weight: bold;">List of nearby bars</h4>
            <% @places_bars.each do |place| %>
              <li><%= place %></li>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
